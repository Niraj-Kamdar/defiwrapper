{
  "name": "root",
  "description": "DeFi Wrapper",
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Niraj-Kamdar/defi-sdk-polywrapper"
  },
  "workspaces": {
    "packages": [
      "./packages/**/*",
      "./documentation"
    ],
    "nohoist": [
      "**/jest"
    ]
  },
  "scripts": {
    "reset": "yarn clean && yarn && yarn build",
    "clean": "npx rimraf ./**/node_modules ./**/yarn.lock ./**/build ./**/cache ./**/artifacts ./**/.w3 ./**/w3",
    "build": "yarn build:coingecko && yarn build:core && yarn build:docs",
    "build:docs": "lerna run build --scope @defiwrapper/documentation",
    "build:defi-sdk": "lerna run build --scope @defiwrapper/defi-sdk",
    "build:coingecko": "lerna run build --scope @defiwrapper/coingecko",
    "build:core": "lerna run build --scope @defiwrapper/core-sdk-root",
    "test": "lerna run test --concurrency=1 --ignore @defiwrapper/defi-sdk",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "format": "prettier --write \"./**/*.{js,ts,graphql,yaml,yml}\"",
    "format:check": "prettier --check \"./**/*.{js,ts,graphql,yaml,yml}\"",
    "bootstrap": "lerna bootstrap"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.11.1",
    "@typescript-eslint/parser": "4.11.1",
    "eslint": "7.16.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "lerna": "^3.22.1",
    "prettier": "2.2.1",
    "rimraf": "3.0.2"
  }
}
